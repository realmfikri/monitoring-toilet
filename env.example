# Node environment selection (Owner: Platform Engineering)
NODE_ENV=development

# Backend runtime configuration (Owner: Backend Services)
PORT=3000
HOST=0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:5173
# Optional per-environment overrides for SPA access
# CORS_ALLOWED_ORIGINS_DEVELOPMENT=http://localhost:5173
# CORS_ALLOWED_ORIGINS_PRODUCTION=https://toilet-app.example.com

# API key configuration (Owner: Backend Services)
API_KEYS_DEVELOPMENT=local-dev-key
# API_KEYS_PRODUCTION=prod-device-key-1,prod-device-key-2
# RATE_LIMIT_WINDOW_MS_DEVELOPMENT=60000
# RATE_LIMIT_MAX_DEVELOPMENT=300
# RATE_LIMIT_WINDOW_MS_PRODUCTION=60000
# RATE_LIMIT_MAX_PRODUCTION=120
# REQUIRE_CLOUDFLARE_AUTH=true
TELEGRAM_POLLING=true

# Telegram alerting credentials (Owner: Facilities Operations)
TELEGRAM_BOT_TOKEN=replace-with-telegram-bot-token

# Database configuration (Owner: Platform Engineering)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/toilet_monitoring
# Optional: required if DATABASE_URL omits password
# DATABASE_PASSWORD=postgres

# Authentication configuration (Owner: Backend Services)
AUTH_SECRET=replace-with-strong-secret
# AUTH_TOKEN_EXPIRATION=12h

# Backup configuration (Owner: Platform Engineering)
BACKUP_BUCKET=s3://toilet-monitoring-backups
# BACKUP_RETENTION_DAYS=30

# Frontend SPA configuration (Owner: Frontend Experience)
VITE_API_BASE_URL=http://localhost:3000
